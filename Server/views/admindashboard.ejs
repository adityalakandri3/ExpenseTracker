<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  </head>
  <body id="page-top">
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('./layout/sidebar.ejs') %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('./layout/topbar.ejs') %>

          <!-- Page Content -->
          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Welcome, <%= user.name %></h1>

            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Admin Profile</h6>
              </div>
              <div class="card-body">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
                <p><strong>Role:</strong> <%= user.role %></p>
                <p><strong>State:</strong> <%= user.location.state %></p>
                <p><strong>City:</strong> <%= user.location.city %></p>
                <p><strong>Verified:</strong> 
                    <% if (user.is_verified === true || user.is_verified === 'true') { %>
                        <span class="text-success">Yes</span>
                      <% } else { %>
                        <span class="text-danger">No</span>
                      <% } %>
                </p>
                <a href="/admin/logout" class="btn btn-danger mt-3">
                  <i class="fas fa-sign-out-alt"></i> Logout
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <%- include('./layout/footer.ejs') %>
      </div>
    </div>

    <!-- Scroll to Top -->
    <a class="scroll-to-top rounded" href="#page-top"><i class="fas fa-angle-up"></i></a>
    <%- include('./layout/logout.ejs') %>

    <!-- Scripts -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
